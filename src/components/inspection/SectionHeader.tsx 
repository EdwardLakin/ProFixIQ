'use client';
import React from 'react';
import { useInspectionSession } from '@lib/inspection/useInspectionSession';

const SectionHeader = () => {
  const { session } = useInspectionSession();
  const currentSection = session?.sections?.[session.currentSectionIndex];

  if (!currentSection) return null;

  return (
    <div className="text-center mb-4">
      <h2 className="text-2xl text-orange-400 font-black uppercase tracking-widest">
        {currentSection.title || currentSection.name}
      </h2>
    </div>
  );
};

export default SectionHeader;