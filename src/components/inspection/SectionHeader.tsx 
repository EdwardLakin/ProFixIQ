// components/inspection/SectionHeader.tsx

import React from 'react';

interface SectionHeaderProps {
  title: string;
  index: number;
  total: number;
}

const SectionHeader: React.FC<SectionHeaderProps> = ({ title, index, total }) => {
  return (
    <div className="w-full sticky top-0 z-10 bg-black bg-opacity-80 px-4 py-2 text-center text-lg font-black text-white border-b border-gray-600">
      <div>{`Section ${index + 1} of ${total}`}</div>
      <div className="text-orange-400 text-xl mt-1">{title}</div>
    </div>
  );
};

export default SectionHeader;